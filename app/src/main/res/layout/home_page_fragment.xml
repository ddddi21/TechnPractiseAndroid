<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.example.technpractiseandroid.main.HomeScreenVM" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
<!--        <include-->
<!--            android:id="@+id/include"-->
<!--            layout="@layout/bottom__navigation"-->
<!--            />-->
    <TextView
        android:id="@+id/tv_home_page_hello_username"
        android:layout_width="158dp"
        android:layout_height="47dp"
        android:layout_margin="16dp"
        android:text = "@={vm.username}"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <ImageView
        android:id="@+id/iv_home_page_arrow_down"
        android:layout_width="57dp"
        android:layout_height="44dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_page_hello_username"
        app:srcCompat="@drawable/arrow_drop_down_black_18dp" />

    <TextView
        android:id="@+id/tv_home_page_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:textSize="18sp"
        android:text="This period"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toEndOf="@+id/iv_home_page_arrow_down"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_page_hello_username" />


    <View
        android:id="@+id/view_home_page_separator0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="384dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_home_page_tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_marginTop="24dp"
        android:text="Tasks"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_home_page_separator0" />"

    <TextView
        android:id="@+id/tv_home_page_projects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_marginTop="25dp"
        android:text="Projects"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_page_tasks"
        />

    <TextView
        android:id="@+id/tv_home_page_tasks_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="68dp"
        android:textSize="16sp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_home_page_separator0" />"
    <TextView
        android:id="@+id/tv_home_page_projects_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="68dp"
        android:text="0"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_page_tasks_count" />

    <ImageView
        android:id="@+id/iv_home_page_arrow_right1"
        android:layout_width="26dp"
        android:layout_height="22dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toEndOf="@+id/tv_home_page_tasks_count"
        app:layout_constraintTop_toBottomOf="@+id/view_home_page_separator0"
        app:srcCompat="@drawable/arrow_right_black_36dp" />

    <ImageView
        android:id="@+id/iv_home_page_arrow_right2"
        android:layout_width="26dp"
        android:layout_height="22dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toEndOf="@+id/tv_home_page_projects_count"
        app:layout_constraintTop_toBottomOf="@+id/iv_home_page_arrow_right1"
        app:srcCompat="@drawable/arrow_right_black_36dp" />

    <View
        android:id="@+id/view_home_page_separator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="232dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_page_projects" />

    <TextView
        android:id="@+id/tv_home_page_create_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_marginTop="25dp"
        android:text="Create project"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_home_page_separator1"
        />

    <ImageView
        android:id="@+id/iv_home_page_arrow_right3"
        android:layout_width="26dp"
        android:layout_height="22dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toEndOf="@+id/tv_home_page_create_project"
        app:layout_constraintTop_toBottomOf="@+id/view_home_page_separator1"
        app:srcCompat="@drawable/arrow_right_black_36dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>